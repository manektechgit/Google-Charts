                    <div class="card-title">
                        <div class="title">Pie Chart</div>
                    </div>
                </div>
                <div class="panel-body">
                    <div id="piechart_div" class="chart" width="710" height="355" style="width: 568px; height: 284px;"></div>
                </div>
            </div>
        </div>
